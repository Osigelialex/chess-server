{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "ES6",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strictPropertyInitialization": false,
    "strict": true,
    "outDir": "./dist",
    "rootDir": "src",
    "noImplicitAny": false,
    "types": ["reflect-metadata"],
    "typeRoots": [
      "./node_modules/@types",
      "./@types"
    ],
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}